# Database Options (choose one)
# Option 1: MongoDB Atlas (free tier)
MONGODB_URI="mongodb+srv://<username>:<password>@<cluster>/<db>?retryWrites=true&w=majority&appName=<appName>"

# Option 2: Local MongoDB
# MONGODB_URI="mongodb://localhost:27017/auramed"
# Option 3: PostgreSQL (Neon/Supabase free tier)
# DATABASE_URL="postgresql://username:password@hostname:5432/auramed"

# Redis (optional for prototype)
REDIS_URL="redis://localhost:6379"

# AI API (OpenRouter - free models available)
OPENROUTER_API_KEY="sk-or-..."

# Translation (MyMemory - no API key needed)
# No configuration required for MyMemory API

# Payment Gateway
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Video Consultation
# Twilio (optional for prototype)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_API_KEY=your_twilio_api_key
TWILIO_API_SECRET=your_twilio_api_secret

# Translation Service (MyMemory - no API key needed)
# GOOGLE_TRANSLATE_API_KEY is not required - using free MyMemory API

# WhatsApp Integration
WHATSAPP_BUSINESS_API_TOKEN=your_whatsapp_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_smtp_app_password

# File Upload
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
